# =================================================================
# FAMILIA GASTRO - CONFIGURACIÓN DE VARIABLES DE ENTORNO
# =================================================================
# Copia este archivo como .env y configura las variables según tu entorno

# =================================================================
# CONFIGURACIÓN BÁSICA DE DJANGO
# =================================================================
SECRET_KEY=your-secret-key-here-generate-a-new-one-for-production
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# =================================================================
# CONFIGURACIÓN DE BASE DE DATOS
# =================================================================
# Para SQLite (desarrollo)
DB_ENGINE=django.db.backends.sqlite3
DB_NAME=db.sqlite3

# Para SQL Server (producción)
# DB_ENGINE=mssql
# DB_NAME=familia_gastro_db
# DB_USER=your_db_user
# DB_PASSWORD=your_db_password
# DB_HOST=your_db_host
# DB_PORT=1433
# DB_DRIVER=ODBC Driver 17 for SQL Server

# Para PostgreSQL (alternativa)
# DB_ENGINE=django.db.backends.postgresql
# DB_NAME=familia_gastro_db
# DB_USER=your_db_user
# DB_PASSWORD=your_db_password
# DB_HOST=localhost
# DB_PORT=5432

# =================================================================
# CONFIGURACIÓN DE CACHE
# =================================================================
# Para desarrollo (memoria local)
CACHE_BACKEND=django.core.cache.backends.locmem.LocMemCache
CACHE_LOCATION=unique-snowflake

# Para producción con Redis
# CACHE_BACKEND=django.core.cache.backends.redis.RedisCache
# CACHE_LOCATION=redis://127.0.0.1:6379/1

# =================================================================
# CONFIGURACIÓN DE SEGURIDAD HTTPS (PRODUCCIÓN)
# =================================================================
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000

# =================================================================
# CONFIGURACIÓN DE EMAIL
# =================================================================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@familagastro.com
SERVER_EMAIL=admin@familagastro.com

# Para desarrollo (consola)
# EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# =================================================================
# CONFIGURACIÓN DE CORS (PARA API)
# =================================================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,https://yourdomain.com

# =================================================================
# CONFIGURACIÓN DE PAYCOMET (PASARELA DE PAGO)
# =================================================================
PAYCOMET_CLIENT_CODE=your-client-code
PAYCOMET_TERMINAL=your-terminal-id
PAYCOMET_CURRENCY=978
PAYCOMET_PASSWORD=your-paycomet-password
PAYCOMET_URL_OK=https://yourdomain.com/pago-exitoso/
PAYCOMET_URL_KO=https://yourdomain.com/pago-fallido/
PAYCOMET_LANGUAGE=001

# =================================================================
# CONFIGURACIÓN DE ADMINISTRACIÓN
# =================================================================
ADMIN_URL=admin/

# =================================================================
# CONFIGURACIÓN ADICIONAL
# =================================================================
# Zona horaria
TIME_ZONE=Europe/Madrid

# Idioma
LANGUAGE_CODE=es-es